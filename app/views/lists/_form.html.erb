<h1><%= @list.id ? 'Edit List' : 'Create Bucket List Entry' %></h1>
<%= form_for @list do |f| %>

<div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, autofocus: true %>
</div>
<br>
<div class="field">
    <%= f.label :description %>
    <%= f.text_field :description, autocomplete: "off" %>
</div>
<br>
<%= f.submit %>
<% end %>